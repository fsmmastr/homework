#1.3 Fibonacci number system (fibsys)
def fibsys(a):
    fib_sequence=[0,1] #последовательность Фибоначчи
    fib_notation=[] #список, содержащий Фибоначчи-нотации числа a
    while fib_sequence[-1]<=a: #создание списка Фибоначчи для достижения a
        fib_sequence.append(fib_sequence[-1]+fib_sequence[-2])
    for fib_number in reversed(fib_sequence):
        if a>=fib_number:
            fib_notation.append(1)
            a-=fib_number
        else:
            fib_notation.append(0)
    return fib_notation
a=int(input("Введите число a: "))
fibonacci_notation=fibsys(a)
print("Последовательность Фибоначчи для числа a равна: ", fibonacci_notation)
