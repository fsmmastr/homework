#1.1 Polynomial (polynom)
def caculate_polynom(coeffs, x):
#вычисление полинома схемой Горнера:
    n=len(coeffs)-1
    result=coeffs[0]
    for i in range(1,n+1):
        result=result*x+coeffs[i]
    return result
def caculate_derivative(coeffs, x):
#вычисление производной полинома схемой Горнера:
    n = len(coeffs) - 1
    result=n*coeffs[n]
    for i in range(n-1,0,-1):
        result=result*x+i*coeffs[i]
    return result
#считаем входные данные:
n=int(input("Введите степень полинома: "))
x=int(input("Введите значение x0: "))
coeffs=[]
for i in range(n+1):
    coeff=int(input(f"Введите коэффициент a{i} : "))
    coeffs.append(coeff)
polynom=caculate_polynom(coeffs, x)
derivative=caculate_derivative(coeffs, x)
print(f"Значение Pn(x):{polynom}")
print(f"Значение P'/(x0):{derivative}")
